{
    "editor.cursorBlinking": "smooth",
    "editor.cursorStyle": "underline",
    "editor.cursorSurroundingLines": 7,
    "editor.cursorSurroundingLinesStyle": "all",
    "editor.fontFamily": "'IBM Plex Mono', 'MesloLGS NF', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 16,
    "editor.renderWhitespace": "boundary",
    "editor.tabSize": 2,
    "files.trimTrailingWhitespace": true,
    "search.showLineNumbers": true,
    "terminal.integrated.shell.linux": "flatpak-spawn",
    "terminal.integrated.shellArgs.linux": ["--host", "zsh"],
    "workbench.colorTheme": "SynthWave '84",
    "workbench.commandPalette.preserveInput": true,
    "workbench.editor.labelFormat": "medium",
    "workbench.enableExperiments": false,
    "workbench.iconTheme": "vscode-icons",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.sideBar.location": "right",
}
