# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true
max_line_length = 72

# Matches multiple files with brace expansion notation
[*.{json,rb,toml,yaml}]
max_line_length = 80

[*.css]
max_line_length = 120

[*.html]
max_line_length = 68

# 4 space indentation
[*.py]
indent_size = 4
max_line_length = 79

[*.sh]
indent_size = 4
max_line_length = 80
